{% extends 'base.html.twig' %}

{% block title %}
    {{'register.confirmation'|trans}}
{% endblock %}

{% block body %}
    <center class="wrapper" style="table-layout:fixed;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;Margin:0 auto;width:100%;max-width:716px;" >
        <div class="webkit" style="max-width:700px;" >
            <table class="outer" align="center" style="border-spacing:0;font-family:sans-serif;color:#333333;Margin:0 auto;width:100%;max-width:700px;" >
                <tr>
                    <td style="padding-top:0;padding-bottom:0;padding-right:0;padding-left:0;" >
                        <table class="outer" align="center" style="border-spacing:0;font-family:sans-serif;color:#333333;Margin:0 auto;width:100%;max-width:700px;" >
                            <tr>
                                <td class="one-column" style="padding-top:0;padding-bottom:0;padding-right:0;padding-left:0;" >
                                    <table width="100%" style="border-spacing:0;font-family:sans-serif;color:#333333;" >
                                        <tr>
                                            <td class="inner contents" style="padding-top:30px;padding-bottom:0;padding-right:30px;padding-left:30px;padding-bottom:30px;width:100%;text-align:center; background-color: #f9f9f9;" >
                                                <p class="h1" style="font-size:18px;font-weight:bold;Margin-bottom:18px;color:#000000;" >{{ 'register.registration_activation' | trans}} {{ username }}!</p>
                                                <p class="top-margin" style="font-weight: bold; margin-top:20px;font-size:12px;Margin-bottom:10px;" >{{ 'register.thank_you' | trans}}</p>
                                                <hr>
                                                <div>
                                                    <p class="top-margin" style="font-weight: bold; margin-top:20px;font-size:12px;Margin-bottom:10px;" >{{ 'register.following_data' |trans}}:</p>
                                                    <table>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">Username: </td>
                                                            <td style="text-align: left;">{{ username }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">Email: </td>
                                                            <td style="text-align: left;">{{ eemail }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">Date of birth: </td>
                                                            <td style="text-align: left;">{{ dateOfBirth }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">Gender: </td>
                                                            <td style="text-align: left;">{{ gender }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">First name: </td>
                                                            <td style="text-align: left;">{{ firstName }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align: left; padding-right: 10px; font-weight: bold;">Last name: </td>
                                                            <td style="text-align: left;">{{ lastName }}</td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <p class="top-margin" style="margin-top:20px;font-size:12px;Margin-bottom:10px;" >

                                                    If you created this account, please click
                                                    <a href="{{ link }}" style="display: inline-block; text-decoration: underline; color:#0e8488; font-weight: bold;">
                                                        here
                                                    </a>
                                                    to activate it.
                                                </p>
                                                <p style='font-size:12px; line-height: 18px; font-weight: bold; margin-top: 30px; color: red;'>{{ 'register.welcome' | trans }}</p>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </center>
{% endblock %}
